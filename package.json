{
  "name": "dspf-edit",
  "displayName": "Display file DDS edit",
  "description": "Extension that helps you create and modify your display file DDS on IBM i",
  "author": {
    "name": "Christian Larsen",
    "url": "https://www.linkedin.com/in/christianlarsenvalverde/"
  },
  "publisher": "ChristianLarsen",
  "version": "0.0.1",
  "keywords": [
    "rpg",
    "ibmi",
    "rpgle",
    "sqlrpgle",
    "as400",
    "dds",
    "sda",
    "strsda",
    "display",
    "dspf"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "ddsStructureView",
          "name": "DSPF Structure"
        }
      ]
    },
    "commands": [
      {
        "command": "dspf-edit.field-description",
        "title": "Field description"
      },
      {
        "command": "dspf-edit.view-structure",
        "title": "View DDS Structure"
      },
      {
        "command": "dspf-edit.change-position",
        "title": "Change Position"
      },
      {
        "command": "dspf-edit.center",
        "title": "Center"
      },
      {
        "command": "dspf-edit.edit-constant",
        "title": "Edit"
      },
      {
        "command": "dspf-edit.edit-field",
        "title": "Edit"
      },
      {
        "command": "dspf-edit.copy-record",
        "title": "Copy"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "dspf-edit.edit-constant",
          "when": "view == ddsStructureView && viewItem == constant",
          "group": "fields_constants_navigation1@1"
        },
        {
          "command": "dspf-edit.edit-field",
          "when": "view == ddsStructureView && viewItem == field",
          "group": "fields_constants_navigation1@1"
        },
        {
          "command": "dspf-edit.center",
          "when": "view == ddsStructureView && (viewItem == constant || viewItem == field)",
          "group": "fields_constants_navigation2@2"
        },
        {
          "command": "dspf-edit.change-position",
          "when": "view == ddsStructureView && (viewItem == constant || viewItem == field)",
          "group": "fields_constants_navigation2@3"
        },
        {
          "command": "dspf-edit.copy-record",
          "when": "view == ddsStructureView && viewItem == record"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}